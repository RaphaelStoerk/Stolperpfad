<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:scrollbarThumbVertical="?attr/colorAppPrimaryContrast">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_herausgeber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/fira_sans_condensed_semibold"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20sp"
            android:textColor="?attr/colorAppTextPrimary"
            android:text="@string/title_impressum_herausgeber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text_herausgeber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/fira_sans_condensed"
            android:text="@string/impressum_text_herausgeber"
            android:textAlignment="textStart"
            android:textColorHighlight="?attr/colorAppPrimaryContrast"
            android:textColorLink="?attr/colorAppAccent"
            android:textColor="?attr/colorAppTextPrimary"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_herausgeber" />

        <TextView
            android:id="@+id/title_vertretung"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/fira_sans_condensed_semibold"
            android:linksClickable="true"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="?attr/colorAppTextPrimary"
            android:textSize="20sp"
            android:textColor="?attr/colorAppTextPrimary"
            android:text="@string/title_impressum_vertretung"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_herausgeber" />

        <TextView
            android:id="@+id/text_vertretung"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/fira_sans_condensed"
            android:text="@string/impressum_text_vertretung"
            android:textAlignment="textStart"
            android:textColor="?attr/colorAppTitle"
            android:textColorHighlight="?attr/colorAppPrimaryContrast"
            android:textColorLink="?attr/colorAppAccent"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_vertretung" />

        <TextView
            android:id="@+id/title_projektverantwortung"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/fira_sans_condensed_semibold"
            android:linksClickable="true"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="?attr/colorAppTextPrimary"
            android:textSize="20sp"
            android:textColor="?attr/colorAppTextPrimary"
            android:text="@string/title_impressum_verantwortung"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_vertretung" />

        <TextView
            android:id="@+id/text_projektverantwortung"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/fira_sans_condensed"
            android:text="@string/impressum_text_projektverantwortung"
            android:textAlignment="textStart"
            android:textColor="?attr/colorAppTitle"
            android:textColorHighlight="?attr/colorAppPrimaryContrast"
            android:textColorLink="?attr/colorAppAccent"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_projektverantwortung" />

        <TextView
            android:id="@+id/title_team"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/fira_sans_condensed_semibold"
            android:linksClickable="true"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="?attr/colorAppTextPrimary"
            android:textSize="20sp"
            android:textColor="?attr/colorAppTextPrimary"
            android:text="@string/title_impressum_team"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_projektverantwortung" />

        <TextView
            android:id="@+id/text_team"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/fira_sans_condensed"
            android:text="@string/impressum_text_team"
            android:textAlignment="textStart"
            android:textColor="?attr/colorAppTitle"
            android:textColorHighlight="?attr/colorAppPrimaryContrast"
            android:textColorLink="?attr/colorAppAccent"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_team" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>