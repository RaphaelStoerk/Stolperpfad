    <include
        layout="@layout/fragment_map_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintVertical_bias="0.0" />

    <include
        layout="@layout/toolbar_route_planner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map_toolbar_buff"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:translationZ="0dp"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/info_map_options_button_buff"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_round_back"
            android:backgroundTint="?attr/colorAppAccent"
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/save_route_button_buff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_info"
            app:tint="?attr/colorAppPrimary" />

        <ImageButton
            android:id="@+id/save_route_button_buff"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_round_back"
            android:backgroundTint="?attr/colorAppAccent"
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/start_guide_button_buff"
            app:layout_constraintStart_toEndOf="@+id/info_map_options_button_buff"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_save_black_24dp"
            app:tint="?attr/colorAppPrimary" />

        <ImageButton
            android:id="@+id/start_guide_button_buff"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_round_back"
            android:backgroundTint="?attr/colorAppPrimaryContrast"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_directions_walk_black_24dp"
            android:tint="?attr/colorAppTextButtonContrast"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/route_option_button_buff"
            app:layout_constraintStart_toEndOf="@+id/save_route_button_buff"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/route_option_button_buff"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_round_back"
            android:backgroundTint="?attr/colorAppAccent"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_plus"
            android:tint="?attr/colorAppPrimary"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/menu_open_button"
            app:layout_constraintStart_toEndOf="@+id/start_guide_button_buff"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/menu_open_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="24dp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_round_back"
            android:backgroundTint="?attr/colorAppAccent"
            android:clickable="true"
            android:elevation="16dp"
            android:focusable="true"
            android:paddingBottom="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_up"
            android:tint="?attr/colorAppPrimary"
            android:translationZ="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/route_option_button_buff"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>