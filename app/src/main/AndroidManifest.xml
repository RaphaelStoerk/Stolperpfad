<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.uni_ulm.ismm.stolperpfad">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <!-- Declares the entry point to the app -->
        <activity
            android:name=".MainMenuActivity"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
            Every used activity has to be listed here, additionally there can be declared what
            hirarchy the activities are in
        -->
        <activity
            android:name=".info_display.ScrollingInfoActivity"
            android:label="@string/title_activity_scrolling_info"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".map_activities.control.RoutePlannerActivity"
            android:label="@string/title_activity_route_planner"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".scanner.ScannerActivity"
            android:label="@string/title_activity_scanner"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".map_activities.control.NextStoneActivity"
            android:label="@string/title_activity_next_stone"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".info_display.history.HistoryInfoBasicActivity"
            android:label="@string/title_activity_history_info"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".info_display.impressum.ImpressumViewActivity"
            android:label="@string/title_activity_impressum"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".info_display.impressum.PrivacyInfoActivity"
            android:label="@string/title_activity_privacy"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".info_display.project_and_artist.ArtistInfoActivity"
            android:label="@string/title_activity_artist_info"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".info_display.project_and_artist.ProjectInfoActivity"
            android:label="@string/title_activity_project_info"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".info_display.project_and_artist.ProjectAndArtistOverviewActivity"
            android:label="@string/title_activity_project_and_artist_overview"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".info_display.BiographyExampleActivity"
            android:label="@string/title_biography_example"
            android:theme="@style/AppTheme" />

        <activity android:name=".database.list_of_persons.PersonsActivity"
            android:label="@string/title_activity_db" />

        <activity
            android:name=".filter_search.FilterSearchActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_filter_search"
            android:theme="@style/AppTheme" />

        <activity android:name=".database.list_of_historical_terms.HistoInfoPage"/>
        <activity android:name=".database.list_of_historical_terms.HistoryActivity" />
        <activity android:name=".database.list_of_persons.PersInfoPage" />
        <!-- Declares the entry point to the app -->

    </application>

</manifest>