<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowExitTransition">@android:transition/no_transition</item>
        <item name="android:windowEnterTransition">@android:transition/no_transition</item>
        <item name="android:fontFamily">@font/fira_sans</item>
    </style>

    <!-- Light mode activity theme -->
    <style name="AppTheme.Light" parent="AppTheme">
        <item name="colorAppTextPrimary">@color/colorTextPrimaryLightMode</item>
        <item name="colorAppTextSecondary">@color/colorTextSecondaryLightMode</item>
        <item name="colorAppPrimary">@color/colorPrimaryLightMode</item>
        <item name="colorAppPrimaryContrast">@color/colorPrimaryContrastLightMode</item>
        <item name="colorAppSecondary">@color/colorSecondaryLightMode</item>
        <item name="colorAppSecondaryContrast">@color/colorSecondaryContrastLightMode</item>
        <item name="colorAppAccent">@color/colorAccentLightMode</item>
        <item name="colorAppTextLink">@color/colorTextLinkLightMode</item>
        <item name="colorAppTitle">@color/colorTitleLightMode</item>
        <item name="colorAppSubTitle">@color/colorSubTitleLightMode</item>
        <item name="colorAppTextButton">@color/colorTextButtonLightMode</item>
        <item name="colorAppTextButtonAccent">@color/colorTextButtonAccentLightMode</item>
        <item name="colorAppTextButtonContrast">@color/colorTextButtonContrastLightMode</item>
        <item name="logoAppHeader">@drawable/ic_logo</item>
        <item name="logoScanner">@drawable/ic_scanner</item>
    </style>

    <!-- Dark mode activity theme -->
    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="colorAppTextPrimary">@color/colorTextPrimaryDarkMode</item>
        <item name="colorAppTextSecondary">@color/colorTextSecondaryDarkMode</item>
        <item name="colorAppPrimary">@color/colorPrimaryDarkMode</item>
        <item name="colorAppPrimaryContrast">@color/colorPrimaryContrastDarkMode</item>
        <item name="colorAppSecondary">@color/colorSecondaryDarkMode</item>
        <item name="colorAppSecondaryContrast">@color/colorSecondaryContrastDarkMode</item>
        <item name="colorAppAccent">@color/colorAccentDarkMode</item>
        <item name="colorAppTextLink">@color/colorTextLinkDarkMode</item>
        <item name="colorAppTitle">@color/colorTitleDarkMode</item>
        <item name="colorAppSubTitle">@color/colorSubTitleDarkMode</item>
        <item name="colorAppTextButton">@color/colorTextButtonDarkMode</item>
        <item name="colorAppTextButtonAccent">@color/colorTextButtonAccentDarkMode</item>
        <item name="colorAppTextButtonContrast">@color/colorTextButtonContrastDarkMode</item>
        <item name="logoAppHeader">@drawable/ic_logo_dark</item>
        <item name="logoScanner">@drawable/ic_scanner_dark</item>
    </style>

    <style name="AppTheme.Launcher">
    <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
    <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="colorAppTextPrimary">@color/colorTextPrimaryLightMode</item>
        <item name="colorAppTextSecondary">@color/colorTextSecondaryLightMode</item>
        <item name="colorAppPrimary">@color/colorPrimaryLightMode</item>
        <item name="colorAppPrimaryContrast">@color/colorPrimaryContrastLightMode</item>
        <item name="colorAppSecondary">@color/colorSecondaryLightMode</item>
        <item name="colorAppSecondaryContrast">@color/colorSecondaryContrastLightMode</item>
        <item name="colorAppAccent">@color/colorAccentLightMode</item>
        <item name="colorAppTextLink">@color/colorTextLinkLightMode</item>
        <item name="colorAppTitle">@color/colorTitleLightMode</item>
        <item name="colorAppSubTitle">@color/colorSubTitleLightMode</item>
        <item name="colorAppTextButton">@color/colorTextButtonLightMode</item>
        <item name="colorAppTextButtonAccent">@color/colorTextButtonAccentLightMode</item>
        <item name="colorAppTextButtonContrast">@color/colorTextButtonContrastLightMode</item>
    </style>

    <!-- Base application theme. -->
    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">

    </style>

    <style name="DialogTheme.Light" parent="DialogTheme">
        <item name="colorAppTextPrimary">@color/colorTextPrimaryLightMode</item>
        <item name="colorAppTextSecondary">@color/colorTextSecondaryLightMode</item>
        <item name="colorAppPrimary">@color/colorPrimaryLightMode</item>
        <item name="colorAppPrimaryContrast">@color/colorPrimaryContrastLightMode</item>
        <item name="colorAppSecondary">@color/colorSecondaryLightMode</item>
        <item name="colorAppSecondaryContrast">@color/colorSecondaryContrastLightMode</item>
        <item name="colorAppAccent">@color/colorAccentLightMode</item>
        <item name="colorAppTextLink">@color/colorTextLinkLightMode</item>
        <item name="colorAppTitle">@color/colorTitleLightMode</item>
        <item name="colorAppSubTitle">@color/colorSubTitleLightMode</item>
        <item name="colorAppTextButton">@color/colorTextButtonLightMode</item>
        <item name="colorAppTextButtonAccent">@color/colorTextButtonAccentLightMode</item>
        <item name="colorAppTextButtonContrast">@color/colorTextButtonContrastLightMode</item>
        <item name="logoAppHeader">@drawable/ic_logo</item>
    </style>

    <style name="DialogTheme.Dark" parent="DialogTheme">
        <item name="colorAppTextPrimary">@color/colorTextPrimaryDarkMode</item>
        <item name="colorAppTextSecondary">@color/colorTextSecondaryDarkMode</item>
        <item name="colorAppPrimary">@color/colorPrimaryDarkMode</item>
        <item name="colorAppPrimaryContrast">@color/colorPrimaryContrastDarkMode</item>
        <item name="colorAppSecondary">@color/colorSecondaryDarkMode</item>
        <item name="colorAppSecondaryContrast">@color/colorSecondaryContrastDarkMode</item>
        <item name="colorAppAccent">@color/colorAccentDarkMode</item>
        <item name="colorAppTextLink">@color/colorTextLinkDarkMode</item>
        <item name="colorAppTitle">@color/colorTitleDarkMode</item>
        <item name="colorAppSubTitle">@color/colorSubTitleDarkMode</item>
        <item name="colorAppTextButton">@color/colorTextButtonDarkMode</item>
        <item name="colorAppTextButtonAccent">@color/colorTextButtonAccentDarkMode</item>
        <item name="colorAppTextButtonContrast">@color/colorTextButtonContrastDarkMode</item>
        <item name="logoAppHeader">@drawable/ic_logo_dark</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Database -->
    <style name="pers_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="MyRadioButtonStyle" parent="AppTheme">
        <item name="android:colorControlNormal">@color/colorTextPrimaryLightMode</item>
        <item name="android:colorControlHighlight">@color/colorTextPrimaryLightMode</item>
        <item name="android:colorControlActivated">@color/colorAccentLightMode</item>
        <item name="android:colorAccent">@color/colorAccentLightMode</item>
        <item name="android:color">@color/colorTextPrimaryLightMode</item>
    </style>
</resources>
